body
	background #000
	padding-top: 120px;

.container
	background #FFF
	margin: 0 auto;
	padding: 0;
	width: 320px;

	form
		padding 10px

	.logo
		width 65px
		margin 0 auto
		background #000
		margin-top: -30px;

	.form-label
		color: #777;
		font-size: 14px;
		margin-bottom: 0;

	.form-control
		margin-bottom: 15px;
		border-radius: 0;
		background: #fbfbfb;
		border-color: #ddd;
		box-shadow: inset 0 1px 2px rgba(0,0,0,.07);

	.btn
		border-radius: 0;

	.forgot-password
		padding 8px
		width 100%
		text-align center
		display block
		border-top 1px solid lightgray

	> p 
		padding 5px 10px

	> h3
		padding 0 10px
