#starters
    .card
        text-align center
        > div
            display inline-block
            vertical-align top

#team
    .cards
        text-align center
        font-size 0

#select-type
#select-batch
    display none

+to(767px)
    section#portfolio 
        #search
            padding 0
        input[type="search"]
            font-size 20px
            margin 20px auto
            width 96%
        p
            margin 0 auto  !important
            width 90%
    #select-type
    #select-batch
        display block
        margin 0 2%
        width auto
        width 96%
    #filter_cool .filter_cool
        display none
//footer
+to(767px)
    footer
        text-align center
        padding 20px 0
        .center > div
            float none
            display inline-block
            width auto
            text-align left
        .logo
            display block !important
            text-align center !important
        .menu
            display none !important

//header
+to(960px)
    header
        position static !important
        background red
        #logo 
            float none
        nav
            float none
            margin 0
            a
                display block
                margin 0
//startups
+to(960px)
    #startup_detail 
        .info
            width auto
            margin 0 20px

//accelerator
+to(960px)
    section
        &#portfolio
            &.accelerator-top 
                #mentors
                    &.accelerator 
                        ul.area 
                            font-size 0
                            li
                                width 48%
                                float none
                                margin 1%
                                height auto
                                display inline-block
                                vertical-align top
                                padding 15px
                                &:hover
                                    transform none
    .accelerator-top 
        .video
            margin 0 auto
            max-width 960px
            padding-bottom 55.6%
            iframe
                bottom 0
                height 100%
                left 0
                position absolute
                right 0
                top 0
                width 100%

+to(767px)
    section
        &#portfolio
            &.accelerator-top 
                #mentors
                    &.accelerator 
                        ul.area 
                            li
                                width auto
                                display block
    h3
        font-size 30px

+to(1000px)
    #activity-list
        li
            display none


