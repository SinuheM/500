//header
+to(960px)
    header
        position static !important
        background red
        #logo 
            float none
        nav
            float none
            margin 0
            a
                display block
                margin 0


//accelerator
+to(960px)
    section
        &#portfolio
            &.accelerator-top 
                #mentors
                    &.accelerator 
                        ul.area 
                            font-size 0
                            li
                                width 48%
                                float none
                                margin 1%
                                height auto
                                display inline-block
                                vertical-align top
                                // &:nth-child(even)
                                //     margin-right 0
    .accelerator-top 
        .video
            margin 0 auto
            max-width 960px
            padding-bottom 55.6%
            iframe
                bottom 0
                height 100%
                left 0
                position absolute
                right 0
                top 0
                width 100%

//activity
+to(1000px)
    #activity-list
        li
            display none
